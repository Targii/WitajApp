<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">item xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#bebebe" />
            <stroke
                android:width="1dp"
                android:color="#b7b7b7" />

            <padding
                android:left="15dp"
                android:top="6dp"
                android:right="15dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#eeeeee"
                android:endColor="#cccccc"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#f0f0f0" />

            <padding
                android:left="5dp"
                android:top="6dp"
                android:right="5dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>